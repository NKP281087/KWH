@model IEnumerable<KWH.Common.ViewModel.Dtos.CategoryDtos>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 
<script src="~/js/KWHApp/Admin/category.js"></script>
<div class="container-fluid px-4">
    <div class="card mb-4" style="margin-top:10px">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Category Data
            <div style="float:right !important">
                  <img src="~/Content/images/icons/add.svg" id="btnAdd" style="cursor:pointer;">
             </div>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody id="tblCategory">
                  
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="top:156px !important">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add New Category</h5>
        <button type="button" class="close" data-dismiss="modal" id="btnClose" aria-label="Close" style="border:none; background:none;">
            <img src="~/Content/images/icons/cross.svg" style="cursor:pointer;">
        </button>
      </div>
      <div class="modal-body">
         
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Category:</label>
            <input type="text" id="txtCategoryName" maxlength="10" class="form-control">
          </div> 
      </div>
      <div class="modal-footer">
         
        <button type="button" id="btnSubmit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>
 

<div class="modal fade" id="EditCategoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="top:156px !important">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Category</h5>
        <button type="button" class="close" data-dismiss="modal" id="btnEditClose" aria-label="Close" style="border:none; background:none;">
            <img src="~/Content/images/icons/cross.svg" style="cursor:pointer;">
        </button>
      </div>
      <div class="modal-body">
         
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Category:</label>
            <input type="text" id="txtEditCategoryName" maxlength="10" class="form-control">
            <input type="hidden" id="hdnCategoryId" />
          </div> 
      </div>
      <div class="modal-footer">
         
        <button type="button" id="btnUpdate" class="btn btn-primary">Update</button>
      </div>
    </div>
  </div>
</div>
 